app-header(app-title="Grid")

#grid(ng-controller="GridController as ctrl")
    div.exercise-type-wrapper(layout="row" flex="100" ng-repeat="exerciseType in ctrl.$dataService.exerciseListByTypes track by $index")
        div(layout="column" flex="100")
            md-card
                md-card-content
                    h2(ng-bind="exerciseType.name" layout="row")
                    table(md-table md-row-select multiple)
                        thead(md-head)
                            tr(md-row)
                                th
                                th(ng-repeat="day in ctrl.calendarDays" ng-bind="day.date | formatDate" md-column)
                        tbody(md-body)
                            tr.exercise.md-table-content-row(ng-repeat="exercise in exerciseType.exerciseList track by $index" md-row)
                                td.exercise(md-cell ng-click="ctrl.openExerciseDetailDialog($event,1)")
                                    span.first-letter--upper(ng-bind="exercise.name" )
                                td.day(ng-repeat="day in ctrl.calendarDays track by $index" md-cell)
                                    md-checkbox(ng-model="isChecked" aria-label="checkbox" ng-disabled="$index !== 0" ng-click="ctrl.toggleExerciseInCurrentWorkout(exercise)")
