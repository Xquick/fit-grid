app-header(app-title="{{'title.plans'|translate}}")

#plans(ng-controller="PlansController as ctrl")
    div.exercise-type-wrapper(layout="row" flex="100" ng-repeat="workout in ctrl.$cacheService.userWorkouts track by $index")
        div(layout="column" flex="100")
            md-card
                md-card-content
                    h2(ng-bind="workout.name" layout="row")
                    table(md-table md-row-select multiple)
                        thead(md-head)
                            tr(md-row)
                                th(md-column)
                        tbody(md-body)
                            tr.exercise.md-table-content-row(ng-repeat="exercise in workout.exerciseList track by $index" md-row)
                                td(md-cell ng-bind="exercise.name")

